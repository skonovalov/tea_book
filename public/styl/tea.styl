header
	width 100%
	padding 22px 0 0 0
	
.header
	max-width 1200px
	margin 0 auto 
	font-size 0
	
.logo 
	display inline-block
	vertical-align top
	width 25%	
	
	a
		display block
		width 100%
		height 100%
		text-decoration none 
		
		span
			display block
			font-size 18px
			line-height 30px
			font-weight 700 
			color #485154 
			letter-spacing .3em 
			text-transform uppercase
			text-align center
			
		em 
			display block
			font-size 12px
			line-height 18px
			color #B8BDBF 
			letter-spacing .4em 	
			text-align center
			text-transform uppercase
	
.menu
	display inline-block
	vertical-align top
	width 75%
	clearfix()
	
	ul 
		float right
		font-size 0 
		padding-top 18px
		
		li 
			display inline-block
			vertical-align top
			margin-left 42px
			padding-bottom 40px
			
			a 
				font-size 20px
				line-height 20px
				color #B8BDBF 
				text-transform uppercase
				text-decoration none
				transition color .3s ease
				
				&:hover
					color #485154 	
					
		.current-menu-item
			a 
				color #485154	
				
#tab-container
	width 1200px
	margin 0 auto 
						
	ul
		margin-bottom 42px
		font-size 0
		text-align center
		
		li 
			display inline-block
			vertical-align top
			margin 0 20px  
			
			a 
				font-family $u
				font-size 20px 
				line-height 26px
				font-weight 300 
				color #333
				letter-spacing 6px
				text-transform uppercase
				text-decoration none
				transition color .3s ease 
				
				&:hover
					color #b8bdbf
					
		.active
			a 
				font-weight 700 	
				
				&:hover
					color #333		
					
.tea-container
	width 1200px
	margin 0 auto 					
					
.tea-item
	display inline-block
	vertical-align top 
	width 360px			
	margin 15px	
	
.tea-item-img
	width 360px
	height 252px
	position relative
		
	img 
		display block
		width 100%
		height 100% 
		
	&:hover 
		.tea-item-overlay
			width 100%
			height 100%
			top 0
			left 0
			transform scale(1)
			opacity 1
			visibility visible
			background rgba(#fff, .7)
				
			
.tea-item-overlay
	display table
	position absolute
	width 110%
	height 100%
	top -5%
	left -5%
	transform scale(1.1)
	opacity 0
	visibility hidden
	background none
	transition width .3s ease, height .3s ease, transform .3s ease, opacity .3s ease, visibility .3s ease, background .3s ease, top .3s ease, left .3s ease			

.tea-item-links	
	display table-cell
	vertical-align middle 
	text-align center
	font-size 24px
	
	a 
		text-align center
		text-decoration none
		color #485154
		transition color .3s ease 
		
		&:hover 
			color #B8BDBF
			
.tea-item-text
	padding-top 45px
	
	a 
		display block
		margin-bottom 18px
		text-decoration none

		h3 
			transition color .3s ease
		
		&:hover
			h3
				color #B8BDBF 						
				
	p 
		height 81px
		overflow hidden
		font-family $u 
		font-size 14px
		line-height 27px
		color #333
		word-wrap break-word
	